stylesheets[screen, projection][] = css/screen.css
stylesheets[print][] = css/print.css
scripts[] = js/modernizr.js
scripts[] = js/fastclick.min.js
scripts[] = js/hammer.min.js
scripts[] = js/jquery.validate.js
scripts[] = js/wsutil.js

features[] = logo
